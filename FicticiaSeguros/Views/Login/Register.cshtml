@model FicticiaSeguros.Models.User
@{
    Layout = null;
}



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>


    <div class="container mt-5 pt-5">

        <div class="row justify-content-center">
            <div class="col-12 col-xl-4 col-md-6">

                <div class="card">
                    <div class="card-header">
                        Register
                    </div>
                    <div class="card-body">

                        <form asp-controller="Login" asp-action="Register" method="post" enctype="multipart/form-data">

                            <input class="form-control mb-3" type="text" placeholder="Name" asp-for="UserName" required />
                            <input class="form-control mb-3" type="text" placeholder="Mail" required asp-for="UserMail" />
                            <input class="form-control mb-3" type="password" placeholder="Password" required asp-for="UserPass" />
                            <div class="d-grid gap-2 mb-3">
                                <button class="btn btn-primary" type="submit">Register</button>
                            </div>
                            @if (ViewData["Mensaje"] != null)
                            {

                                <div class="form-group">
                                    <div class="alert alert-danger" role="alert">
                                        @ViewData["Mensaje"]
                                    </div>
                                </div>
                            }
                            If you are already registered <a href="@Url.Action("SignIn","Login")"> Login</a>

                        </form>

                    </div>

                </div>

            </div>
        </div>

    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>