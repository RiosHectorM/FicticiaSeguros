@model IEnumerable<FicticiaSeguros.Models.Person>

@{
    ViewData["Title"] = "Index";
}

<h2>Person List</h2>

<p >
    <a class="btn btn-primary btn-lg" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dni)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                Active
            </th>
            <th>
                Driver
            </th>
            <th>
                Glasses
            </th>
            <th>
                Diabetic
            </th>
            <th>
                Other Diseases
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dni)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDriver)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UsesGlasses)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDiabetic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OtherDiseases)
            </td>
            <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a class="btn btn-warning" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
